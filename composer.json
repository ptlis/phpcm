{
    "name":         "ptlis/phpcm",
    "description":  "Simple tool for monitoring test coverage.",
    "license":      "MIT",
    "keywords":     ["coverage", "test", "monitor"],
    "type":         "library",
    "authors": [
        {
            "name": "brian ridley",
            "email":"ptlis@ptlis.net"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "symfony/console": "~2.6",
        "ptlis/vcs": "@dev",
        "ptlis/shell-command": "~0.7",
        "monolog/monolog": "~1.13",
        "romaricdrigon/metayaml": "~1.0",
        "guzzlehttp/guzzle": "~5.0",
        "ptlis/semantic-version": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "symfony/var-dumper": "~2.6"
    },
    "autoload": {
        "psr-4": {
            "ptlis\\CoverageMonitor\\": "src/",
            "ptlis\\CoverageMonitor\\Test\\": "tests/"
        }
    }
}
